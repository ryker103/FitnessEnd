<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".AnotherActivity">


    //Tieu de (Da an)

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/backgym" />

    <TextView
        android:id="@+id/titleAno"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Title"
        android:textSize="22dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả"
        android:id="@+id/description"
        android:textSize="18dp"
        android:textColor="#3F51B5"
        android:layout_below="@+id/titleAno"
        android:layout_marginTop="1dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả"
        android:id="@+id/descriptionAdd"
        android:textSize="18dp"
        android:textColor="#a9a9a9"
        android:layout_below="@+id/description"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    //add them 2 Des
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ky thuật tập"
        android:id="@+id/descriptionKTT"
        android:textSize="18dp"
        android:textColor="#3F51B5"
        android:textStyle="bold"
        android:layout_below="@+id/descriptionAdd"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Mô tả kỹ thuật tập"
        android:id="@+id/descriptionMTKTT"
        android:textSize="18dp"
        android:textColor="#a9a9a9"
        android:layout_below="@+id/descriptionKTT"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    //ad coutdown




</RelativeLayout>