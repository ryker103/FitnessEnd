<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="190dp"
    android:id="@+id/rowlayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageIV"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@color/cardview_dark_background"/>

        //add
        <ImageView
            android:id="@+id/imageIVAdd"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@color/cardview_dark_background"/>

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Mô tả"
            android:id="@+id/descriptionTV"
            android:textSize="18dp"
            android:textColor="#a9a9a9"
            android:layout_toRightOf="@+id/imageIV"
            android:layout_toEndOf="@+id/imageIV"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/titleTV"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Mô tả"
            android:id="@+id/descriptionTVAdd"
            android:textSize="18dp"
            android:textColor="#a9a9a9"
            android:layout_toRightOf="@+id/imageIV"
            android:layout_toEndOf="@+id/imageIV"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/titleTV"/>

        //ky thuat tap va mo ta
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Ky thuat tap"
            android:id="@+id/descriptionKTT"
            android:textSize="18dp"
            android:textColor="#a9a9a9"
            android:layout_toRightOf="@+id/imageIV"
            android:layout_toEndOf="@+id/imageIV"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/titleTV"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Ky thuat tap"
            android:id="@+id/descriptionmotaKTT"
            android:textSize="18dp"
            android:textColor="#a9a9a9"
            android:layout_toRightOf="@+id/imageIV"
            android:layout_toEndOf="@+id/imageIV"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/titleTV"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>